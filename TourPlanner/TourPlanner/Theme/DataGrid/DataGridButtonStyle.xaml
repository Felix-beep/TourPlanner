<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="viewButton" TargetType="Button" BasedOn="{StaticResource BaseContentButton}">
        <Setter Property="Background" Value="#ffb73a"/>
        <Setter Property="BorderBrush" Value="#ffa200"/>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#ffc869"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>