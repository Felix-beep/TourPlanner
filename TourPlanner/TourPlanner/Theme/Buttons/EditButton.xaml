<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="editButton" TargetType="Button" BasedOn="{StaticResource BaseContentButton}">
        <Setter Property="Background" Value="#3aa0ff"/>
        <Setter Property="BorderBrush" Value="#0084ff"/>
        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#66b5ff"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>