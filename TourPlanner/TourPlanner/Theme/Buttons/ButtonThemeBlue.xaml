<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonTheme}"
           x:Key="ButtonThemeBlue">
        <Setter Property="Background" Value="#3aa0ff"/>

        <Style.Triggers>
            <Trigger Property="Border.IsMouseOver" Value="True">
                <Setter Property="Background" Value="#ffcf4a"/>
            </Trigger>

            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#66b5ff"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>