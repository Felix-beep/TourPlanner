<UserControl x:Class="TourPlanner.MVVM.View.Searchbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="SearchBox" Text="{Binding Path=SearchText}" FontSize="30" Grid.Column="0" Height="40" Width="400" HorizontalAlignment="Left" >
            <TextBox.InputBindings>
                <KeyBinding Key="Enter" Command="{Binding Path=ExecuteCommandSearch}"/>
            </TextBox.InputBindings>
        </TextBox>
        <Button Grid.Column="1" Margin="10" Content="Submit" Command="{Binding Path=ExecuteCommandSearch}"/>
    </Grid>
</UserControl>
